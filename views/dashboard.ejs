    <title>Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: Arial, sans-serif;
        }

        /* Estilo do menu lateral */
        .sidebar {
            background-color: #2c3e50;
            color: white;
            display: flex;
            flex-direction: column;
            height: 100%;
            position: fixed;
            top: 0;
            left: -250px; /* Inicialmente fora da tela */
            width: 250px;
            z-index: 100;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.1);
            transition: left 0.3s ease;
        }

        .sidebar h2 {
            text-align: center;
            color: #ecf0f1;
            margin-bottom: 30px;
        }

        .sidebar a {
            color: #ecf0f1;
            text-decoration: none;
            padding: 10px;
            text-align: center;
            margin: 5px 0;
            border-radius: 4px;
            transition: background 0.3s;
        }

        .sidebar a:hover {
            background-color: #007bff;
        }

        /* Estilo do Conteúdo Principal */
        .content {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            padding: 20px;
            margin-left: 250px; /* Espaço para o menu lateral */
            transition: margin-left 0.3s ease;
        }

        /* Estilo do Card */
        .card {
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 100%;
            max-width: 600px;  /* Limite máximo de largura */
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        /* Estilo da Imagem dentro do Card */
        .card img {
            width: 100%;
            max-width: 200px; /* Limita a largura da imagem */
            margin-bottom: 20px;
        }

        /* Estilo do Texto */
        .text {
            font-size: 1.2rem;
            color: #333;
            margin-bottom: 20px;
        }

        /* Link no card */
        .text a {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .text a:hover {
            text-decoration: underline;
        }

        /* Efeito de Hover no Card */
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
        }

        /* Ícone do Hambúrguer */
        .hamburger-menu {
            display: none;
            cursor: pointer;
            position: absolute;
            top: 20px;
            left: 20px;
            z-index: 1000;
        }

        .hamburger-menu .bar {
            width: 30px;
            height: 4px;
            background-color: #333;
            margin: 6px 0;
            transition: 0.4s;
        }

        /* Responsividade */
        @media (max-width: 768px) {
            .sidebar {
                left: -250px; /* Inicialmente fora da tela */
            }

            .sidebar.open {
                left: 0; /* Menu aberto */
            }

            .hamburger-menu {
                display: block; /* Exibe o ícone hamburguer */
            }

            .content {
                margin-left: 0; /* Quando o menu estiver aberto, o conteúdo vai ocupar toda a tela */
            }
        }

        /* Estilo para Desktop */
        @media (min-width: 769px) {
            .sidebar {
                left: 0; /* Menu visível em desktops */
            }

            .content {
                margin-left: 250px; /* Espaço para o menu lateral */
            }

            .hamburger-menu {
                display: none; /* Esconde o hamburguer no desktop */
            }
        }

    </style>
</head>
