    <h1>Lista de Notas</h1><br><br>
    <button><a href="/notes">Adicionar Nova Nota</a></button>
   <button><a href="/">Voltar ao Dashboard</a></button> <br><br>
    
<ul>
    <% if (notas.length > 0) { %>  <!-- Verifica se há notas -->
        <% notas.forEach(nota => { %>
            <li>
                <%= nota.nota %>  <!-- Exibe o texto da nota -->
                <!-- Botão para excluir -->
                <form action="/delete-note/<%= nota.id %>" method="POST" style="display:inline;">
                    <button type="submit">Excluir</button>
                </form>
            </li>
        <% }); %>
    <% } else { %>
        <p>Nenhuma nota disponível.</p> <!-- Exibe mensagem caso não haja notas -->
    <% } %>
</ul>
</body>
</html>